rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
   match /songs/{songId} {
          allow write: if request.auth != null;

          allow read, update, delete, list: if request.auth.uid == resource.data.authorId;

     }
    
    match /users/{user} {
        allow read, write: if request.auth.uid
    }
    // match /{document=**} {
    //   allow read, write: if request.auth.uid != null && (resource.data.visibility == "public" || resource.data.authorId == request.auth.uid);
    // }
  }
}